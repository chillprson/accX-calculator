---
const { children } = Astro.props;
---
<html lang="id">
  <head>
    <meta charset="UTF-8">
    <title>Unem Calculator</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      body { font-family: sans-serif; max-width: 600px; margin: 40px auto; background: #f5f5f5; padding: 20px; border-radius: 8px; }
      input, select, button { display: block; margin-top: 12px; width: 100%; padding: 10px; }
      button { background-color: #0084ff; color: white; border: none; border-radius: 4px; }
      h1, h2, h3 { color: #333; }
    </style>
  </head>
  <body>
    {children}
  </body>
</html>